            </div>
            <div class="form-group">
              <label for="exampleInputPassword1">Password</label>
              <input type="password" class="form-control" id="user_password" placeholder="Password">
            </div>
            <div class="row">
              <div class="col">
                <button id="login" type="submit" class="btn btn-primary mt-3">login</button>
              </div>
              <div class="col mt-3">
                <p class="">Or click here to <button type="button" class="btn"><a href="/signup">signup</a></button></p>
              </div>
            </div>
          </form>
        </div>
      </div>
      <div class="col"></div>
    </div>
    <div class="row mt-4">
      <div class="col"></div>
      <div class="col-6">
        <div id="login-err-msg" class="mb-3"></div>
      </div>
      <div class="col"></div>
    </div>
  </div>
</div>
