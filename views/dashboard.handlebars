<div id="main-container" class="container">
  <div class="jumbotron text-center header-wrap" align="center">
    <p class="lead">Welcome to <strong>Surf Weasel</strong></p>
    <hr class="my-4">
    <div>
      {{#if isloggedin}}
        You are logged in as {{user.firstName}}
        <a href="/logout"> <button type="btn" class="btn">Logout</button></a>
        
      {{else}}
        <p>You need to log in to use this app.</p>
        <input type="text" id="searchText">
        {{!-- <button class="btn button" id="search">Search</button> --}}
        <div>
          <ul id="searchResults"></ul>
        </div>
        <div id="map"></div>
      {{/if}}
      <h5 id="login-err-msg"></h5>
    </div>
  </div>
</div>

{{> modal/login-block}}
